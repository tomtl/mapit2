%section#top-header.row
  %h1.col-md-2
    = link_to "Map It", home_path
  %form.navbar-form(action="")
    .form-group
    - if current_user
      .btn-group.nav_item.col-md-4
        = link_to "My Locations", locations_path
    - if current_user
      .btn-group.nav_item.col-md-6
        = link_to('', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown') do
          = current_user.full_name
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to sign_out_path do
              %i.icon-circle-arrow-left
              logout
    - unless current_user
      .btn-group.nav_item
        = link_to "Sign Up", register_path, class: 'btn btn-primary'
      .btn-group.nav_item
        = link_to "Sign In", sign_in_path, class: 'btn btn-primary'
